#!/bin/bash

read -r url

if echo "$url" | grep -Eq 'http://|https://'; then
	FILE_PATH="$HOME/.cache/dunst/icons/$(echo -n "$url" | sha256sum | head -c 64)"
	mkdir -p ~/.cache/dunst/icons
	if [ ! -f "$FILE_PATH" ]; then
		curl -s "$url" -o "$FILE_PATH"
	fi
	echo -n "$FILE_PATH"
else
	echo -n "$url"
fi
