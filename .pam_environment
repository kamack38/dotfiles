# Path
PATH DEFAULT=${PATH}:@{HOME}/.local/bin/:@{HOME}/.local/share/cargo/bin

# XDG
XDG_CACHE_HOME DEFAULT=@{HOME}/.cache
XDG_STATE_HOME DEFAULT=@{HOME}/.local/state
XDG_CONFIG_HOME DEFAULT=@{HOME}/.config
XDG_DATA_HOME DEFAULT=@{HOME}/.local/share
XDG_BIN_HOME DEFAULT=@{HOME}/.local/bin

# Data
CARGO_HOME DEFAULT=${XDG_DATA_HOME}/cargo
GNUPGHOME DEFAULT=${XDG_DATA_HOME}/gnupg
NODE_REPL_HISTORY DEFAULT=${XDG_DATA_HOME}/node_repl_history
TS_NODE_HISTORY DEFAULT=${XDG_DATA_HOME}/ts_node_repl_history
NVM_DIR DEFAULT=${XDG_DATA_HOME}/nvm
RUSTUP_HOME DEFAULT=${XDG_DATA_HOME}/rustup
WINEPREFIX DEFAULT=${XDG_DATA_HOME}/wine
WORKON_HOME DEFAULT=${XDG_DATA_HOME}/virtualenvs
VAGRANT_HOME DEFAULT=${XDG_DATA_HOME}/vagrant
VAGRANT_ALIAS_FILE DEFAULT=${XDG_DATA_HOME}/vagrant/aliases
GOPATH DEFAULT=${XDG_DATA_HOME}/go

# Config
WAKATIME_HOME DEFAULT=${XDG_CONFIG_HOME}/wakatime
KDEHOME DEFAULT=${XDG_CONFIG_HOME}/kde
GTK_RC_FILES DEFAULT=${XDG_CONFIG_HOME}/gtk-1.0/gtkrc
GTK2_RC_FILES DEFAULT=${XDG_CONFIG_HOME}/gtk-2.0/gtkrc
XINITRC DEFAULT=${XDG_CONFIG_HOME}/X11/xinitrc
_JAVA_OPTIONS DEFAULT=-Djava.util.prefs.userRoot=${XDG_CONFIG_HOME}/java
FFMPEG_DATADIR DEFAULT=${XDG_CONFIG_HOME}/ffmpeg
PYTHONSTARTUP DEFAULT=${XDG_CONFIG_HOME}/python/pythonrc

# Cache
LESSHISTFILE DEFAULT=${XDG_CACHE_HOME}/less/history
CUDA_CACHE_PATH DEFAULT=${XDG_CACHE_HOME}/nv
HISTFILE DEFAULT=${XDG_CACHE_HOME}/bash/history

# NPM
NPM_CONFIG_USERCONFIG DEFAULT=${XDG_CONFIG_HOME}/npm/.npmrc
NPM_CONFIG_CACHE DEFAULT=${XDG_CACHE_HOME}/npm

# ENV
QT_QPA_PLATFORMTHEME DEFAULT=kde

